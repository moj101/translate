                    </tr>
                </thead>
                <tbody>
                    <?php foreach ($logs as $log): ?>
                    <tr>
                        <td class="p-2 border"><?php echo htmlspecialchars($log['username'] ?? 'کاربر ناشناس', ENT_QUOTES, 'UTF-8'); ?></td>
                        <td class="p-2 border"><?php echo $log['action'] === 'login' ? 'ورود' : ($log['action'] === 'logout' ? 'خروج' : 'استخراج PDF'); ?></td>
                        <td class="p-2 border"><?php echo htmlspecialchars($log['ip_address'] ?? '-', ENT_QUOTES, 'UTF-8'); ?></td>
                        <td class="p-2 border"><?php echo $log['action'] === 'pdf_extract' ? htmlspecialchars($log['file_name'] ?? '-', ENT_QUOTES, 'UTF-8') : '-'; ?></td>
                        <td class="p-2 border"><?php echo $log['action'] === 'pdf_extract' ? ($log['input_tokens'] ?? '-') : '-'; ?></td>
                        <td class="p-2 border"><?php echo $log['action'] === 'pdf_extract' ? ($log['output_tokens'] ?? '-') : '-'; ?></td>
                        <td class="p-2 border"><?php echo date('Y-m-d H:i:s', strtotime($log['timestamp'])); ?></td>
                    </tr>
